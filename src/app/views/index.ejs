<!DOCTYPE html>
<html>
<head>
	<title>Welcome to User Managment System</title>
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/css/index.css">
	<link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
</head>
<body>
<% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
	<div class="container">

		<header>
			<h1>Login and Registration Form</h1>
		</header>
		<div id="container_demo">
			<!--<a class="hiddenanchor" id="toregister"></a>
			<a class="hiddenanchor" id="tologin"></a>-->

			<div id="wrapper">
				<%if (typeof showLogin != 'undefined') { %>
				<div id="login" class="animate form">
					<form  action="/signIn" autocomplete="on" method="POST">
						<h1>Log in</h1>
						<p>
							<label for="username" class="uname" > Your email or username </label>
							<input id="username" name="user_email" required="required" type="text" placeholder="example@example.com"/>
						</p>
						<p>
							<label for="password" class="youpasswd"> Your password </label>
							<input id="password" name="user_pass" required="required" type="password" placeholder="eg. X8df!90EO" />
						</p>
						<p class="keeplogin">
							<input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" />
							<label for="loginkeeping">Keep me logged in</label>
						</p>
						<p class="login button">
							<a href="http://cookingfoodsworld.blogspot.in/" target="_blank" ></a>
						</p>
						<p class="signin button">
							<input type="submit" value="Sign In"/>
						</p>
						<p class="change_link">
							Not a member yet ?
							<a href="/?action=register" class="to_register">Join us</a>
						</p>
					</form>
				</div>
				<% } %>

				<%if (typeof showRegister != 'undefined') { %>
				<div id="register" class="animate form">
					<form  action="/signUp" autocomplete="on" method="POST">
						<h1> Sign up </h1>
						<p>
							<label for="usernamesignup" class="uname" >Your username</label>
							<input id="usernamesignup" name="user_name" required="required" type="text" placeholder="Your whole name" />
						</p>
						<% if(typeof errors != 'undefined') { %>
							<% for(var i = 0; i < errors.length; i++) { %>
								<% if(errors[i].param == 'user_name') { %>
									<div class="alert alert-danger">
										<%= errors[i].msg %>
									</div>
								<% } %>
							<% } %>
						<% } %>
						<p>
							<label for="emailsignup" class="youmail"  > Your email</label>
							<input id="emailsignup" name="user_email" required="required" type="email" placeholder="Your Email"/>
						</p>
						<% if(typeof errors != 'undefined') { %>
							<% for(var i = 0; i < errors.length; i++) { %>
								<% if(errors[i].param == 'user_email') { %>
									<div class="alert alert-danger">
										<%= errors[i].msg %>
									</div>
								<% } %>
							<% } %>
						<% } %>
						<p>
							<label for="passwordsignup" class="youpasswd" >Your password </label>
							<input id="passwordsignup" name="user_pass" required="required" type="password" placeholder="Your password"/>
						</p>
						<% if(typeof errors != 'undefined') { %>
							<% for(var i = 0; i < errors.length; i++) { %>
								<% if(errors[i].param == 'user_pass') { %>
									<div class="alert alert-danger">
										<%= errors[i].msg %>
									</div>
								<% } %>
							<% } %>
						<% } %>
						<p>
							<label for="passwordsignup_confirm" class="youpasswd" >Please confirm your password </label>
							<input id="passwordsignup_confirm" name="user_pass_confirm" required="required" type="password" placeholder="Your password"/>
						</p>
						<%if (typeof pass_match != 'undefined') { %>
							<div class="alert alert-danger">
								<%= pass_match %>
							</div>
						<% } %>
						<p class="signin button">
							<input type="submit" value="Sign up"/>
						</p>
						<p class="change_link">
							Already a member ?
							<a href="?action=login" class="to_register"> Go and log in </a>
						</p>
					</form>
				</div>
				<% } %>
			</div>
		</div>
	</div>

	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>
</html>
